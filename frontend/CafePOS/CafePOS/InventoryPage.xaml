<Page
    x:Class="CafePOS.InventoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafePOS"
    xmlns:dto="using:CafePOS.DTO"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F5F5F5">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Product List -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="8" 
                Margin="0,0,10,0" 
                BorderThickness="1" 
                BorderBrush="#E0E0E0">
            
            <ScrollViewer>
                <StackPanel>

                <Grid Background="#EFEFEF" BorderBrush="#E0E0E0" BorderThickness="1" Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ID"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Padding="5"/>
                                    <TextBlock Text="Tên món"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Grid.Column="1"
                        Padding="5"/>
                                    <TextBlock Text="Loại"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Grid.Column="2"
                        Padding="5"/>
                                    <TextBlock Text="Đơn giá"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Grid.Column="3"
                        Padding="5"/>
                </Grid>

                <!-- Data Rows -->
                <ListView 
                     x:Name="ProductListView" 
                     Background="#F9F9F9" 
                     SelectionChanged="ProductListView_SelectionChanged"
                     BorderThickness="1" 
                     BorderBrush="#E0E0E0"
                     Margin="10,5,10,10"
                     SelectionMode="Single"
                     VerticalAlignment="Stretch">

                    <ListView.ItemContainerTransitions>
                        <TransitionCollection />
                    </ListView.ItemContainerTransitions>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="dto:Drink">
                            <Grid Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{x:Bind ID}" 
                                    HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Name}" 
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind CategoryId}" 
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Price}" 
                                    Grid.Column="3"
                                    HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- RIGHT: Product Details and Actions -->
        <Border Grid.Column="1" Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0" Padding="20">
            <StackPanel Spacing="10">
                <TextBlock Text="Chi tiết sản phẩm" FontSize="22" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center"/>

                <TextBox x:Name="ProductIDBox" Header="ID" IsReadOnly="True"/>
                <TextBox x:Name="ProductNameBox" Header="Tên sản phẩm" TextChanged="ProductNameBox_TextChanged"/>
                <ComboBox x:Name="CategoryComboBox" Header="Danh mục"/>
                <NumberBox x:Name="PriceBox" Header="Giá" Minimum="0"/>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="Thêm" Background="#4CAF50" Foreground="White" Click="btnAdd_Click"/>
                    <Button Content="Xóa" Background="#F44336" Foreground="White" Click="btnDelete_Click"/>
                    <Button Content="Sửa" Background="#FF9800" Foreground="White" Click="btnEdit_Click"/>
                    <Button Content="Xem" Background="#2196F3" Foreground="White" Click="btnView_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
