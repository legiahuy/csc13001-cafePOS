<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CafePOS.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafePOS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light">

    <Grid>
        <!-- Background gradient -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F8F9FA" Offset="0.0" />
                    <GradientStop Color="#E9ECEF" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Decorative elements -->
        <Canvas>
            <Ellipse Fill="#BCD0C7" Opacity="0.2" Width="300" Height="300" Canvas.Left="-150" Canvas.Top="-100" />
            <Ellipse Fill="#D4A373" Opacity="0.2" Width="200" Height="200" Canvas.Left="550" Canvas.Top="450" />
        </Canvas>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar Menu -->
            <Grid Grid.Column="0" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- App Logo and Title -->
                <StackPanel Grid.Row="0" Padding="20" Background="#0D6EFD">
                    <Grid Height="40" Margin="0,0,0,15">
                        <Ellipse Width="40" Height="40" Fill="White" Opacity="0.2" />
                        <FontIcon Glyph="&#xE1E2;" FontSize="20" FontFamily="Segoe MDL2 Assets" Foreground="White" />
                    </Grid>
                    <TextBlock Text="Café POS System" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White" />
                    <TextBlock Text="Quản lý quán cà phê" 
                               FontSize="12" 
                               Foreground="White" 
                               Opacity="0.7"
                               Margin="0,5,0,0" />
                </StackPanel>

                <!-- Menu Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10,0,10">
                        <!-- Dashboard -->
                        <Button x:Name="DashboardButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Dashboard">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE80F;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Trang chủ" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Order Management -->
                        <Button x:Name="OrderButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Orders">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Quản lý đơn hàng" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Table Management -->
                        <Button x:Name="TableButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Tables">   
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE8A1;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Phòng/Bàn" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Inventory Management -->
                        <Button x:Name="InventoryButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Inventory">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE7B8;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Quản lý kho" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Staff Management -->
                        <Button x:Name="StaffButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Staff">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Quản lý nhân viên" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Customer Management -->
                        <Button x:Name="CustomerButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Customers">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE716;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Quản lý khách hàng" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Payment Methods -->
                        <Button x:Name="PaymentButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Payments">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE8C7;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Phương thức thanh toán" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Invoice Management -->
                        <Button x:Name="InvoiceButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Invoices">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE71D;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Quản lý hoá đơn" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Customer Support -->
                        <Button x:Name="SupportButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Support">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE789;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Hỗ trợ khách hàng" VerticalAlignment="Center" />
                            </Grid>
                        </Button>

                        <!-- Sales Reports -->
                        <Button x:Name="ReportsButton" 
                                Style="{StaticResource TextBlockButtonStyle}" 
                                Click="NavigationButton_Click"
                                Tag="Reports">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE9D9;" FontFamily="Segoe MDL2 Assets" Margin="15,0,15,0" />
                                <TextBlock Grid.Column="1" Text="Báo cáo bán hàng" VerticalAlignment="Center" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Profile Section -->
                <Grid Grid.Row="2" Background="#F8F9FA" Padding="15" BorderBrush="#E5E5E5" BorderThickness="0,1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <PersonPicture Width="40" Height="40" Grid.Column="0" />

                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="UserNameText" Text="Admin" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock x:Name="UserRoleText" Text="Quản lý" Opacity="0.7" FontSize="12" />
                    </StackPanel>

                    <Button Grid.Column="2" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Padding="8"
                            ToolTipService.ToolTip="Đăng xuất"
                            Click="LogoutButton_Click">
                        <FontIcon Glyph="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#6C757D" />
                    </Button>
                </Grid>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Page Title -->
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="PageTitleText" 
                                   Text="Trang chủ" 
                                   FontSize="28" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2E3D49" />
                        <TextBlock x:Name="PageDescriptionText" 
                                   Text="Tổng quan hệ thống quản lý" 
                                   Foreground="#6C757D" 
                                   FontSize="14" 
                                   Margin="0,5,0,0" />
                    </StackPanel>

                 
                </Grid>

                <!-- Page Content - Frame for navigation -->
                <Frame x:Name="ContentFrame" Grid.Row="1" />
            </Grid>
        </Grid>
    </Grid>

    <Page.Resources>
        <!-- Button Style for Sidebar Menu Items -->
        <Style x:Key="TextBlockButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#495057" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                            <Rectangle x:Name="SelectedIndicator" Width="4" HorizontalAlignment="Left" Fill="#0D6EFD" Visibility="Collapsed" />
                            <ContentPresenter x:Name="ContentPresenter"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#F5F7FA" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#E9ECEF" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#E7F1FF" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SelectedIndicator" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
</Page>