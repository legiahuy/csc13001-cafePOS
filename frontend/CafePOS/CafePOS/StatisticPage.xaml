<Page
    x:Class="CafePOS.Views.StatisticPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafePOS.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="using:CafePOS.DTO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Date Selection -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <CalendarDatePicker x:Name="StatisticDatePicker" 
                              Header="Chọn ngày" 
                              Margin="0,0,10,0"/>
            <Button Content="Áp dụng" 
                    Click="ApplyDateButton_Click"/>
        </StackPanel>

        <!-- Statistics Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Basic Stats -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Tổng số hóa đơn:" Margin="0,0,0,5"/>
                <TextBlock x:Name="TotalBillsText" FontSize="24" FontWeight="Bold"/>
                
                <TextBlock Text="Số hóa đơn đã hủy:" Margin="0,10,0,5"/>
                <TextBlock x:Name="CanceledBillsText" FontSize="24" FontWeight="Bold"/>
                
                <TextBlock Text="Tổng số sản phẩm bán được:" Margin="0,10,0,5"/>
                <TextBlock x:Name="TotalItemsText" FontSize="24" FontWeight="Bold"/>
                
                <TextBlock Text="Trung bình sản phẩm/hóa đơn:" Margin="0,10,0,5"/>
                <TextBlock x:Name="AvgItemsText" FontSize="24" FontWeight="Bold"/>
                
                <TextBlock Text="Trung bình doanh thu/hóa đơn:" Margin="0,10,0,5"/>
                <TextBlock x:Name="AvgRevenueText" FontSize="24" FontWeight="Bold"/>
            </StackPanel>

            <!-- Right Column - Charts -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Doanh thu theo giờ" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Margin="0,0,0,10"/>
                
                <lvc:CartesianChart
                    Series="{x:Bind Series, Mode=OneWay}"
                    XAxes="{x:Bind XAxes, Mode=OneWay}"
                    YAxes="{x:Bind YAxes, Mode=OneWay}"
                    Height="400"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
