<Page
    x:Class="CafePOS.Views.BillManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CafePOS.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="20" Spacing="10">

            <StackPanel Orientation="Horizontal" Spacing="10">
                <DatePicker x:Name="CheckInDatePicker"/>
                <DatePicker x:Name="CheckOutDatePicker"/>
                <Button Content="Search" Click="SearchButton_Click"/>
            </StackPanel>

            <!-- Column Headers -->
            <Grid Background="#EEE" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ID" Grid.Column="0" FontWeight="Bold"/>
                <TextBlock Text="Table" Grid.Column="1" FontWeight="Bold"/>
                <TextBlock Text="Check In" Grid.Column="2" FontWeight="Bold"/>
                <TextBlock Text="Check Out" Grid.Column="3" FontWeight="Bold"/>
                <TextBlock Text="Status" Grid.Column="4" FontWeight="Bold"/>
                <TextBlock Text="Total" Grid.Column="5" FontWeight="Bold"/>
                <TextBlock Text="Discount" Grid.Column="6" FontWeight="Bold"/>
                <TextBlock Text="Payment" Grid.Column="7" FontWeight="Bold"/>
                <TextBlock Text="FinalAmount" Grid.Column="8" FontWeight="Bold"/>
            </Grid>

            <!-- Bill Table -->
            <GridView x:Name="BillListView" IsItemClickEnabled="True" SelectionMode="Single" Height="400">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Id}" Grid.Column="0"/>
                            <TextBlock Text="{Binding TableLabel}" Grid.Column="1"/>
                            <TextBlock Text="{Binding DateCheckIn}" Grid.Column="2"/>
                            <TextBlock Text="{Binding DateCheckOut}" Grid.Column="3"/>
                            <TextBlock Text="{Binding StatusText}" Grid.Column="4"/>
                            <TextBlock Text="{Binding TotalAmount}" Grid.Column="5"/>
                            <TextBlock Text="{Binding Discount}" Grid.Column="6"/>
                            <TextBlock Text="{Binding PaymentMethod}" Grid.Column="7"/>
                            <TextBlock Text="{Binding FinalAmount}" Grid.Column="8"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Paging buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="⟨ Previous" Click="PreviousPage_Click"/>
                <TextBlock x:Name="PageIndicator" Text="Page 1" VerticalAlignment="Center" Margin="10,0"/>
                <Button Content="Next ⟩" Click="NextPage_Click"/>
            </StackPanel>

            <!-- Checkout Button -->
            <Button Content="Check Out Selected Bill" Click="CheckOutButton_Click" Margin="0,10,0,0"/>

        </StackPanel>
    </ScrollViewer>
</Page>
