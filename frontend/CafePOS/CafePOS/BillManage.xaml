<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CafePOS.Views.BillManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Bill Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Date Selection Row -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10">
            <TextBlock Text="From:" VerticalAlignment="Center"/>
            <DatePicker x:Name="CheckInDatePicker" Width="150"/>
            <TextBlock Text="To:" VerticalAlignment="Center"/>
            <DatePicker x:Name="CheckOutDatePicker" Width="150"/>
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- Bill List -->
        <ListView x:Name="BillListView" Grid.Row="2" ItemsSource="{Binding Bills}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Padding="5">
                        <TextBlock Text="Bill ID: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Id}" Margin="5,0"/>
                        <TextBlock Text="Check-in: " FontWeight="Bold" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding DateCheckIn}" Margin="5,0"/>
                        <TextBlock Text="Check-out: " FontWeight="Bold" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding DateCheckOut}" Margin="5,0"/>
                        <TextBlock Text="Status: " FontWeight="Bold" Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding StatusText}" Margin="5,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Checkout Button -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CheckOutButton" Content="Check Out" Click="CheckOutButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
